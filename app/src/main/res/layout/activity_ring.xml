<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RingActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/ring_with_solid"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/ring_with_stroke"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/ring_with_gradient"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/ring_with_stroke_gradient"/>
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/rotate_ring" />

</LinearLayout>